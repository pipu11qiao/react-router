{
  "files": ["index.tsx", "server.tsx"],
  "exclude": ["dist/**/*"],
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",

    "strict": true,
    "jsx": "react",

    "declaration": true,
    "emitDeclarationOnly": true,

    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": ".",

    // Needed for the more-strict pnpm setup, can be removed in v7 since we'll
    // be collapsing the lifted server file into the main package export
    "paths": {
      "@remix-run/router": ["../../packages/router/index.ts"],
      "react-router": ["../../packages/react-router/index.ts"],
      "react-router-dom": ["./index.tsx"]
    }
  }
}
